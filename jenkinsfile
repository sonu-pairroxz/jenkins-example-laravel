pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/sonu-pairroxz/jenkins-example-laravel.git'
                sh 'composer install'
                sh 'cp .env.example .env'
                sh 'php artisan key:generate'
            }
        }
        stage('Test') {
            steps {
                sh './vendor/bin/phpunit'
            }
        }
    }
}
